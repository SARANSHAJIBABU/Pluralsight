<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rotate"
            android:onClick="onClickRotate"
            app:layout_constraintStart_toEndOf="@+id/alpha"
            app:layout_constraintBottom_toBottomOf="@+id/alpha"/>
    <Button
            android:text="alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickAlpha"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"
            android:id="@+id/alpha" app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickTranslate"
            android:id="@+id/translate" app:layout_constraintStart_toEndOf="@+id/rotate"
            app:layout_constraintBottom_toBottomOf="@+id/rotate"/>
    <Button
            android:text="Scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scale"
            android:onClick="onClickScale"
            app:layout_constraintStart_toEndOf="@+id/translate"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/translate"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/steering_wheel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/wheel" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.26"/>
    <Button
            android:text="Set XML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setxml" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/setcode"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/rotate"
            android:onClick="onClickSetXml"/>
    <Button
            android:text="Set Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setcode"
            app:layout_constraintStart_toEndOf="@+id/setxml" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/setxml" app:layout_constraintBottom_toBottomOf="@+id/setxml"
            android:onClick="onClickSetCode"/>
    <Button
            android:text="ViewPropertyAnimator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/button" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/setcode" android:onClick="onClickViewPropertyAnimation"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button2"/>
    <Button
            android:text="PropertyValuesHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/button" android:onClick="onClickViewPropertyHolder"/>
</android.support.constraint.ConstraintLayout>